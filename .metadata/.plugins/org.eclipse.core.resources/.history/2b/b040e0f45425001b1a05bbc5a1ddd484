<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<title>메세지 보내기</title>
	<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>
	<script id="temp" type="text/x-handlebars-template"></script>
	</head>
<body>
	<h1>[메세지 보내기]</h1>
	<table border=1>
		<tr>
			<td width=100>보낸 이</td>
			<td width=500>${vo.uname} [포인트:${vo.point}]</td>
		</tr>
		<tr>
			<td >받는 이</td>
			<td>
				<select id="receiver">
					<c:forEach items="${list}" var="v">
						<c:if test="${vo.uid != v.uid}">
							<option value="${v.uid}">${v.uname}</option>
						</c:if>
					</c:forEach>
				</select>
			</td>
		</tr>
		<tr>
			<td>내용</td>
			<td><input type="text" size=70 id="txtMessage"></td>
		</tr>
	</table>
	<button id="btnSend">보내기</button>
	<h1>[보낸 메시지]</h1>
	<table id="tbl"></table>
	<script id="temp" type="text/x-handlebars-template">
		<tr>
			<td width=100>받은이</td>
			<td width=300>내용</td>
			<td width=200>받은 날짜</td>
		</tr>
		{{#each .}}
		<tr>
			<td>{{receiver}}:{uname}</td>
			<td>{{message}}</td>
			<td>{{sendDate}}</td>
		</tr>
		{{/each}}
	</script>
</body>
<script>
	var sender="${vo.uid}";
	getList();
	
	function getList(){
		$.ajax({
			type:"get",
			url:"sendList",
			data:{"sender":sender},
			success:function(data){
				alert(sender);
				var temp = Handlebars.compile($("#temp").html());
				$("#tbl").html(temp(data));
			}
		});
	}
	
	$("#btnSend").on("click",function(){
		var receiver=$("#receiver").val();
		var message=$("#txtMessage").val();
		if(message==""){
			alert("내용을 입력하세요");
			return;
		}
		if(!confirm("메세지를 보내시겠습니까?")) return;
		$.ajax({
			type:"post",
			url:"insert",
			data:{"sender":sender, "receiver":receiver,"message":message},
			success:function(){
				alert("메시지가 전송되었습니다.");
			}
		});
	});
</script>
</html>